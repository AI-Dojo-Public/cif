FROM base AS phished

ARG CLIENT_PHISHED_USER_NAME=user
ARG CLIENT_PHISHED_ATTACKER_ADDRESS=attacker
ARG CLIENT_PHISHED_ATTACKER_PORT=4444

ENV CLIENT_PHISHED_USER_NAME=${CLIENT_PHISHED_USER_NAME}
ENV CLIENT_PHISHED_ATTACKER_ADDRESS=${CLIENT_PHISHED_ATTACKER_ADDRESS}
ENV CLIENT_PHISHED_ATTACKER_PORT=${CLIENT_PHISHED_ATTACKER_PORT}

RUN apt update && apt install -y \
    python3 \
    && rm -rf /var/lib/apt/lists/*

COPY --chmod=777 phishing.py /tmp/phishing.py

COPY entrypoint.sh /entrypoints
