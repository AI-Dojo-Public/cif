FROM base AS client-developer

ARG CLIENT_DEVELOPER_USER_NAME=developer
ARG CLIENT_DEVELOPER_DATABASE_NAME=wordpress
ARG CLIENT_DEVELOPER_DATABASE_USER=wordpress
ARG CLIENT_DEVELOPER_DATABASE_PASSWORD=wordpress
ARG CLIENT_DEVELOPER_DATABASE_HOST=mysql

ENV CLIENT_DEVELOPER_USER_NAME=${CLIENT_DEVELOPER_USER_NAME}
ENV CLIENT_DEVELOPER_DATABASE_NAME=${CLIENT_DEVELOPER_DATABASE_NAME}
ENV CLIENT_DEVELOPER_DATABASE_USER=${CLIENT_DEVELOPER_DATABASE_USER}
ENV CLIENT_DEVELOPER_DATABASE_PASSWORD=${CLIENT_DEVELOPER_DATABASE_PASSWORD}
ENV CLIENT_DEVELOPER_DATABASE_HOST=${CLIENT_DEVELOPER_DATABASE_HOST}

RUN apt update && apt install -y \
    mysql-client \
    && rm -rf /var/lib/apt/lists/*

COPY entrypoint.sh /entrypoints
